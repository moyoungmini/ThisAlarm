<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/landing_page_background_img"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exit_img"
        android:layout_alignParentTop="true"
        android:id="@+id/speech_dismiss_iv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/speech_texttospeech_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/speaker_img"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/speech_word_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="41sp"
                android:fontFamily="@font/nanumsquaredbfont"
                android:textColor="#ffffff"
                android:letterSpacing="0.43"
                android:text="apple"
                />
            <TextView
                android:id="@+id/speech_mean_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.25"
                android:text=":사과"
                android:fontFamily="@font/nanumsquaredbfont"
                />

        </LinearLayout>
        <Button
            android:id="@+id/speech_speack_btn"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_speak"/>
        <Button
            android:id="@+id/speech_pass_btn"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pass"/>
    </LinearLayout>

    <TextView
        android:id="@+id/speech_rest_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.43"
        android:text="남은 갯수"
        android:fontFamily="@font/nanumsquaredbfont"
        android:textColor="#ffffff"
        android:textSize="41sp" />

</RelativeLayout>