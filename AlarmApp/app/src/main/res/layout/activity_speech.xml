<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".SpeechActivity">

    <TextView
        android:id="@+id/sttEngWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 말해야할 음성" />
    <TextView
        android:id="@+id/sttEngMean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 영어 뜻" />

    <TextView
        android:id="@+id/sttResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="음성인식 결과가 여기에 표시됩니다."/>

    <TextView
        android:id="@+id/maching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="결과창 입니다"/>

    <Button
        android:id="@+id/sttStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="음성인식 시작" />




</LinearLayout>