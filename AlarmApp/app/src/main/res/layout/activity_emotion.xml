<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.makeus.android.thisalarm.camera.CameraSourcePreview
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeus.android.thisalarm.camera.GraphicOverlay
                android:id="@+id/faceOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.makeus.android.thisalarm.camera.CameraSourcePreview>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/tv_emotion_action_background">
            <TextView
                android:id="@+id/emotion_action_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:text="얼굴을 인식하면 시작합니다."

                android:textColor="@color/white"
                android:textSize="19dp" />


        </LinearLayout>


        <ProgressBar
            android:id="@+id/emotion_pb"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="50"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_drawable"
            android:layout_width="match_parent"
            android:layout_height="12dp" />



    </LinearLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/emotion_emoticon_iv"
        android:background="@drawable/emotion_default_img"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/emotion_result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="100 %"
        android:layout_below="@id/emotion_emoticon_iv"
        android:textColor="@color/white"
        android:textSize="30dp"/>
    <Button
        android:id="@+id/emotion_dismiss_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="74dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn_speak"
        android:text="알람 해제"
        android:textSize="19sp"
        android:layout_alignParentBottom="true"
        />
        />
</RelativeLayout>
