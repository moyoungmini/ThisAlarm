<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.example.alarmapp.camera.CameraSourcePreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.alarmapp.camera.GraphicOverlay
                android:id="@+id/faceOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.example.alarmapp.camera.CameraSourcePreview>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/emotion_action_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동작을 보여주는 부분 입니다."
            android:background="@color/colorPrimary"
            android:textSize="30dp"/>
        <ProgressBar
            android:id="@+id/emotion_pb"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="50"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_drawable"
            android:layout_width="match_parent"
            android:layout_height="12dp" />
        <TextView
            android:id="@+id/emotion_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="000/100"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:textColor="@color/white"
            android:textSize="30dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emotion_emoticon_iv"
        android:background="@drawable/emotion_default"
        android:layout_centerInParent="true"/>
</RelativeLayout>
