<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.AlarmSetActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="알람설정"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        ></View>

    <TimePicker
        android:id="@+id/alarm_set_timepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"></TimePicker>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        ></View>

    <TextView
        android:onClick="onClick"
        android:id="@+id/alarm_set_mission_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#a0a0a0"
        android:lineSpacingExtra="4sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="미션선택"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@color/fontColor"
            android:layout_marginLeft="30dp"
            android:lineSpacingExtra="4sp"

            android:text="소리"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <Switch
            android:id="@+id/alarm_set_sound_switch"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@color/fontColor"
            android:lineSpacingExtra="4sp"
            android:layout_marginLeft="30dp"
            android:text="날짜선택"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <TextView
                android:onClick="onClick"
                android:id="@+id/alarm_set_mon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/fontColor"
                android:lineSpacingExtra="4sp"
                android:layout_gravity="center_vertical"
                android:text="월"
                />
            <TextView
                android:onClick="onClick"
                android:id="@+id/alarm_set_tue_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/fontColor"
                android:lineSpacingExtra="4sp"
                android:layout_gravity="center_vertical"
                android:text="화"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:onClick="onClick"
                android:id="@+id/alarm_set_wen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/fontColor"
                android:lineSpacingExtra="4sp"
                android:layout_gravity="center_vertical"
                android:text="수"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:onClick="onClick"
                android:id="@+id/alarm_set_thu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/fontColor"
                android:lineSpacingExtra="4sp"
                android:layout_gravity="center_vertical"
                android:text="목"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:onClick="onClick"
                android:id="@+id/alarm_set_fri_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/fontColor"
                android:lineSpacingExtra="4sp"
                android:layout_gravity="center_vertical"
                android:text="금"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:onClick="onClick"
                android:id="@+id/alarm_set_sat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/fontColor"
                android:lineSpacingExtra="4sp"
                android:layout_gravity="center_vertical"
                android:text="토"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:onClick="onClick"
                android:id="@+id/alarm_set_sun_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/fontColor"
                android:lineSpacingExtra="4sp"
                android:layout_gravity="center_vertical"
                android:text="일"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@color/fontColor"
            android:layout_marginLeft="30dp"
            android:lineSpacingExtra="4sp"
            android:text="반복알람"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <Switch
            android:id="@+id/alarm_set_vibration_switch"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        ></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        ></View>

    <Button
        android:id="@+id/alarm_set_saved_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_save"
        android:lineSpacingExtra="6sp"
        android:onClick="onClick"
        android:textColor="@drawable/btn_text_save"
        android:textSize="30sp"
        android:text="저       장" />
</LinearLayout>