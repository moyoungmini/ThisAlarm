<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/speech_relative_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/landing_page_background_img"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/speech_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speech_rest_tv"
            android:fontFamily="@font/nanum_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.43"
            android:text="남은 갯수"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/exit_img"
            android:id="@+id/speech_dismiss_iv"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/speech_pb"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="50"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressbar_drawable"
        android:layout_width="match_parent"
        android:layout_below="@id/speech_layout"
        android:layout_height="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/speech_texttospeech_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/speaker_img"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/speech_word_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="41sp"
                android:textColor="#ffffff"
                android:fontFamily="@font/nanum_bold"
                android:letterSpacing="0.3"
                android:layout_marginBottom="5dp"
                android:text="apple"
                />
            <TextView
                android:id="@+id/speech_mean_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nanum_bold"
                android:textColor="#ffffff"
                android:letterSpacing="0.25"
                android:text=":사과"
                />

        </LinearLayout>
            <Button
                android:id="@+id/speech_speack_btn"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="@font/nanum_extra_bold"
                android:background="@drawable/btn_speak"
                android:text="SPEAK"
                android:textColor="@drawable/btn_speech_speak_text_color"
                android:textSize="19sp"
                />

        <Button
            android:id="@+id/speech_pass_btn"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanum_extra_bold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_pass"
            android:text="PASS"
            android:textColor="@drawable/btn_speech_pass_text_color"
            android:textSize="19sp"/>
    </LinearLayout>

</RelativeLayout>